# StructSim Backend Environment Configuration
# Copy this file to .env and modify as needed

# Flask Environment
FLASK_ENV=development

# Secret Keys (change these in production!)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database Configuration
# SQLite (default for development)
# DATABASE_URL=sqlite:///sim_ai_paltform.db

# MySQL (for production)
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/sim_ai_paltform

# PostgreSQL (alternative)
DATABASE_URL=postgresql://user:password@localhost:5432/sim_ai_paltform

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# Redis key prefix for this application
REDIS_KEY_PREFIX=structsim:
# Default cache TTL in seconds (1 hour)
REDIS_DEFAULT_TTL=3600